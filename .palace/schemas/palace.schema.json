{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://palace/schemas/palace.config.schema.json",
  "title": "PalaceConfig",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "kind", "project", "provenance"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0"
    },
    "kind": {
      "type": "string",
      "const": "palace/config"
    },
    "project": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "description": {"type": "string"},
        "language": {"type": "string"},
        "repository": {"type": "string"}
      }
    },
    "defaultRoom": {"type": "string"},
    "guardrails": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "doNotTouchGlobs": {
          "type": "array",
          "items": {"type": "string"}
        },
        "readOnlyGlobs": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "provenance": {
      "$ref": "#/definitions/provenance"
    }
  },
  "definitions": {
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["createdBy", "createdAt"],
      "properties": {
        "createdBy": {"type": "string", "minLength": 1},
        "createdAt": {"type": "string", "format": "date-time"},
        "updatedBy": {"type": "string"},
        "updatedAt": {"type": "string", "format": "date-time"},
        "generator": {"type": "string"},
        "generatorVersion": {"type": "string"}
      }
    }
  }
}
